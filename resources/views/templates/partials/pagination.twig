{% if pagination.needed %}
    <ul class="pagination justify-content-center">
        {% if pagination.type == 2 %}
            {% if pagination.page == 1 %}
                <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1">&larr; Older</a></li>
            {% elseif pagination.page > 1 %}
                <li class="page-item"><a class="page-link" href="?page={{ pagination.page - 1 }}">&larr; Older</a></li>
            {% endif %}

            {% if pagination.page == pagination.lastpage %}
                <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1">Newer &rarr;</a></li>
            {% elseif pagination.page < pagination.lastpage %}
                <li class="page-item"><a class="page-link" href="?page={{ pagination.page + 1 }}">Newer &rarr;</a></li>
            {% endif %}
        {% endif %}

        {% if pagination.type == 1 %}
            {% if pagination.page == 1 %}
                <li class="page-item disabled"><a class="page-link" href="#" tabindex="-1">Previous</a></li>
            {% elseif pagination.page > 1 %}
                <li class="page-item"><a class="page-link" href="?page={{ pagination.page - 1 }}" tabindex="-1">Previous</a></li>
            {% endif %}

            {% for i in 1..pagination.lastpage %}
                <li class="page-item{{ i == pagination.page ? ' active' : ''}}"><a class="page-link" href="?page={{i}}">{{ i }}</a></li>
            {% endfor %}

            {% if (pagination.page) == pagination.lastpage %}
                <li class="page-item disabled"><a class="page-link" href="#">Next</a></li>
            {% elseif (pagination.page) < pagination.lastpage %}
                <li class="page-item"><a class="page-link" href="?page={{ pagination.page + 1 }}">Next</a></li>
            {% endif %}
        {% endif %}
    </ul>
{% endif %}
